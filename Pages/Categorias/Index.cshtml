@page
@model E_ShopManagerWEB2.Pages.Categorias.IndexModel
@{
	ViewData["Tittle"] = "Categorias";
}
<h1>Categorias</h1>
<p>
	<a asp-page="Create" class="btn btn-success">Categoria Nueva</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Categorias[0].NombreCategoria)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Categorias[0].Descripcion)
			</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Categorias)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.NombreCategoria)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Descripcion)
				</td>
				<td>
					<a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
					<a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
